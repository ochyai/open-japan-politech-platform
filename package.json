{
  "name": "open-japan-politech-platform",
  "version": "0.1.5",
  "private": true,
  "description": "AIエージェント時代の政治インフラ — 政党にも企業にもよらない、完全オープンな政治テクノロジー基盤",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/ochyai/open-japan-politech-platform.git"
  },
  "homepage": "https://github.com/ochyai/open-japan-politech-platform#readme",
  "bugs": {
    "url": "https://github.com/ochyai/open-japan-politech-platform/issues"
  },
  "packageManager": "pnpm@10.4.0",
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "dev:moneyglass": "pnpm --filter moneyglass-web dev & pnpm --filter moneyglass-admin dev",
    "dev:policydiff": "pnpm --filter policydiff-web dev",
    "dev:parliscope": "pnpm --filter parliscope-web dev & pnpm --filter parliscope-admin dev",
    "build": "pnpm --recursive run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm --recursive run typecheck",
    "test": "pnpm --recursive run test",
    "db:generate": "pnpm --filter @ojpp/db generate",
    "db:migrate": "pnpm --filter @ojpp/db migrate",
    "db:seed": "pnpm --filter @ojpp/db seed",
    "db:reset": "pnpm --filter @ojpp/db reset",
    "db:studio": "pnpm --filter @ojpp/db studio",
    "dev:seatmap": "pnpm --filter seatmap-web dev",
    "dev:culturescope": "pnpm --filter culturescope-web dev",
    "dev:socialguard": "pnpm --filter socialguard-web dev",
    "dev:portal": "pnpm --filter portal-web dev",
    "dev:broadlistening": "pnpm --filter broadlistening-web dev",
    "ingest:prefectures": "pnpm --filter @ojpp/ingestion ingest:prefectures",
    "ingest:finance": "pnpm --filter @ojpp/ingestion ingest:finance",
    "ingest:parliament": "pnpm --filter @ojpp/ingestion ingest:parliament",
    "ingest:manifesto": "pnpm --filter @ojpp/ingestion ingest:manifesto",
    "ingest:elections": "pnpm --filter @ojpp/ingestion ingest:elections",
    "ingest:culture": "pnpm --filter @ojpp/ingestion ingest:culture",
    "ingest:social": "pnpm --filter @ojpp/ingestion ingest:social",
    "ingest:all": "pnpm --filter @ojpp/ingestion ingest:all",
    "analyze": "ANALYZE=true pnpm --filter moneyglass-web build",
    "analyze:policydiff": "ANALYZE=true pnpm --filter policydiff-web build",
    "analyze:parliscope": "ANALYZE=true pnpm --filter parliscope-web build",
    "analyze:seatmap": "ANALYZE=true pnpm --filter seatmap-web build",
    "analyze:culturescope": "ANALYZE=true pnpm --filter culturescope-web build",
    "analyze:socialguard": "ANALYZE=true pnpm --filter socialguard-web build",
    "analyze:portal": "ANALYZE=true pnpm --filter portal-web build",
    "analyze:broadlistening": "ANALYZE=true pnpm --filter broadlistening-web build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild",
      "sharp"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@next/bundle-analyzer": "^16.1.6",
    "typescript": "catalog:"
  }
}
