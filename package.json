{
  "name": "open-japan-politech-platform",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0",
  "packageManager": "pnpm@10.4.0",
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "dev:moneyglass": "pnpm --filter moneyglass-web dev & pnpm --filter moneyglass-admin dev",
    "dev:policydiff": "pnpm --filter policydiff-web dev",
    "dev:parliscope": "pnpm --filter parliscope-web dev & pnpm --filter parliscope-admin dev",
    "build": "pnpm --recursive run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm --recursive run typecheck",
    "test": "pnpm --recursive run test",
    "db:generate": "pnpm --filter @ojpp/db generate",
    "db:migrate": "pnpm --filter @ojpp/db migrate",
    "db:seed": "pnpm --filter @ojpp/db seed",
    "db:reset": "pnpm --filter @ojpp/db reset",
    "db:studio": "pnpm --filter @ojpp/db studio",
    "ingest:finance": "pnpm --filter @ojpp/ingestion ingest:finance",
    "ingest:parliament": "pnpm --filter @ojpp/ingestion ingest:parliament",
    "ingest:manifesto": "pnpm --filter @ojpp/ingestion ingest:manifesto",
    "ingest:all": "pnpm --filter @ojpp/ingestion ingest:all",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "typescript": "^5.7.0"
  }
}
